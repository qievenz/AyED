            "program": "${fileDirname}/${fileBasenameNoExtension}.o",
            //"program": "${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            //"cwd": "",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [{
                "description": "Habilitar la impresión con sangría para gdb",
